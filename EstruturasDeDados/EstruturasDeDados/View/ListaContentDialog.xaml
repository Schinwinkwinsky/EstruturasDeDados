<ContentDialog
    x:Class="EstruturasDeDados.View.ListaContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EstruturasDeDados.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Propriedades da Lista"
    PrimaryButtonText="OK" 
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <StackPanel Padding="0,10">
            <TextBlock Text="Tipo de Inserção" FontSize="20" Margin="0,0,0,10"/>
            <RadioButton Name="NaoOrdenadaInsercao_RdioBtn" Content="Não Ordenada" GroupName="TipoInsercao" Checked="NaoOrdenadaInsercao_RdioBtn_Checked"/>
            <RadioButton Name="OrdenadaInsercao_RdioBtn" Content="Ordenada" GroupName="TipoInsercao" Checked="OrdenadaInsercao_RdioBtn_Checked"/>
            <RadioButton Name="OrdenadaCrescente_RdioBtn" Content="Crescente" GroupName="TipoOrdenada" Margin="20,0"/>
            <RadioButton Name="OrdenadaDecrescente_RdioBtn" Content="Decrescente" GroupName="TipoOrdenada" Margin="20,0 "/>
        </StackPanel>
    </Grid>
</ContentDialog>
